{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [ "jasmine", "node" ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.mock.ts",
    "src/assets/mock/ionic-mocks/**/*.ts",
    "src/assets/mock/angular-mocks/**/*.ts"
  ]
}
